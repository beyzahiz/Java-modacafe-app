<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="241dp"
        android:layout_height="0dp"
        android:layout_marginBottom="581dp"
        android:backgroundTint="@color/baslik_moru"
        android:fontFamily="@font/sunshines"
        android:gravity="center"
        android:text="@string/sicak_icecekler"
        android:textColor="@color/baslik_moru"
        android:textSize="50sp"
        android:textStyle="italic|bold"
        app:layout_constraintBottom_toTopOf="@+id/geri10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ana_button3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/white"
        android:text="@string/ana_menu"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/geri10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/geri10"
        app:layout_constraintTop_toTopOf="@+id/geri10"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/geri10"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="136dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="@color/white"
        android:text="GERÄ°"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ana_button3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView3"
        android:layout_width="90dp"
        android:layout_height="0dp"

        android:layout_marginStart="1dp"
        android:layout_marginTop="39dp"
        android:layout_marginBottom="555dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/geri10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/circular"
        app:srcCompat="@drawable/logo"></com.google.android.material.imageview.ShapeableImageView>

    />
</androidx.constraintlayout.widget.ConstraintLayout>