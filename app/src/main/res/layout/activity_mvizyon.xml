<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mvizyon">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="325dp"
        android:layout_height="148dp"
        android:text="Moda Cafe ailesi olarak, müşterilerimize en kaliteli ve lezzetli deneyimi sunmayı misyon ediniyoruz. Her bir şubemizde, özenle seçilmiş malzemelerle hazırlanan zengin menümüz ve sıcak atmosferimizle, lezzetin ve huzurun bir araya geldiği özel anlar yaratmayı hedefliyoruz."
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.329" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="331dp"
        android:layout_height="173dp"
        android:text="Moda Cafe olarak vizyonumuz, gastronomi dünyasında öncü bir marka olmak ve müşterilerimizin beklentilerini aşan bir deneyim sunmaktır. Şehrin her köşesinde kaliteli hizmet ve özgün lezzetlerle anılmak, misafirlerimize unutulmaz anlar yaşatmak ve onlarla uzun süreli bir ilişki kurmak en büyük hedefimizdir."
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.729" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="279dp"
        android:layout_height="56dp"
        android:fontFamily="@font/sunshines"
        android:text="MISYONUMUZ / VIZYONUMUZ"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/baslik_moru"
        android:textSize="50sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.046" />

    <Button
        android:id="@+id/mvAnamenu_button"
        android:layout_width="130dp"
        android:layout_height="52dp"
        android:backgroundTint="@color/white"
        android:text="GERİ"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.056"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Misyonumuz:"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.147"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.218" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vizyonumuz:"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.135"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.526" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView3"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/circular"
        app:srcCompat="@drawable/logo"

        tools:layout_editor_absoluteX="-13dp"
        tools:layout_editor_absoluteY="38dp"></com.google.android.material.imageview.ShapeableImageView>
    <![CDATA[

    />
]]>
</androidx.constraintlayout.widget.ConstraintLayout>